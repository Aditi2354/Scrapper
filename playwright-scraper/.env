# Optional: rotate IP / datacenter proxy for tougher sites
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Server
PORT=5000
# Headful can reduce bot detection; set true locally if you want to watch
HEADLESS=false
# Milliseconds per navigation
NAV_TIMEOUT=30000
# Concurrency for recommendation searches
CONCURRENCY=3
# Locale/Language (Trendyol par hydrate help karta hai)
LOCALE=tr-TR
ACCEPT_LANGUAGE=tr-TR,tr;q=0.9,en;q=0.8